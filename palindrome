function palindrome(str) {
  console.log(str);
  str = str.toLowerCase().replace(/\s+|\,|\./g, '');//remove any spaces
  console.log(str);
  var strReverse = str.split('').reverse().join('');//reverses the string
  console.log('Reversed ' + strReverse);
  
  if(str === strReverse)
    {
      return true;
    }
  else
    {
      return false;
    }
}



palindrome("A man, a plan, a canal. Panama");
